{
  "name": "hexcodex",
  "version": "1.0.0",
  "description": "Color helper telegram robot",
  "main": "./src/hexabot.js",
  "bin": {
    "hexabot": "./src/hexabot.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qwhex/hexabot.git"
  },
  "scripts": {
    "dev": "nodemon src/hexabot.js",
    "dev-test": "mocha --watch $(git diff --name-only | grep .js)",
    "test": "mocha",
    "cov": "nyc npm test",
    "cov-html": "nyc --reporter=html npm test",
    "cov-lcov": "nyc --reporter=text-lcov npm test",
    "lint": "eslint ./src/*.js",
    "postinstall": "cd node_modules/canvas && node-gyp rebuild"
  },
  "keywords": [
    "color search",
    "color extract",
    "telegram",
    "hex",
    "rgb",
    "hsl",
    "color",
    "css"
  ],
  "author": {
    "name": "Mice Papai",
    "email": "qwhexz@gmail.com",
    "url": "https://qwhex.com"
  },
  "license": "MIT",
  "dependencies": {
    "canvas": "^1.6.11",
    "colibrijs": "^1.0.0",
    "color": "^3.0.0",
    "color-name-list": "^4.11.0",
    "color-octree": "^2.2.1",
    "fuzzy": "^0.1.3",
    "fuzzysearch": "^1.0.3",
    "isomorphic-fetch": "^3.0.0",
    "nearest-color": "^0.4.2",
    "pn": "^1.1.0",
    "svg.js": "^2.6.5",
    "svg2png": "^4.1.1",
    "svgdom": "0.0.15",
    "telegraf": "^3.21.2",
    "unidecode": "^0.1.8"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^5.4.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "mocha": "^5.2.0",
    "node-gyp": "^5.0.7",
    "nodemon": "^1.18.3",
    "nyc": "^15.0.0"
  }
}
